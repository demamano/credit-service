      "target": "ES6",
      "module": "commonjs",
      "outDir": "dist",
      "rootDir": ".",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "allowSyntheticDefaultImports": true,
      "typeRoots": ["./node_modules/@types", "./types"],
    },
    "include": ["src","scripts/**/*"],
    "exclude": ["node_modules", "**/*.test.ts"]
  }
  